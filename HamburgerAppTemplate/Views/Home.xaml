<Page
    x:Class="HamburgerAppTemplate.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HamburgerAppTemplate.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <local:PageHeader VerticalAlignment="Top" Title="Home">
            <local:PageHeader.PrimaryCommands>
                <AppBarButton Label="Try Me" Icon="Accept" />
            </local:PageHeader.PrimaryCommands>
          
        </local:PageHeader>
        <StackPanel Padding="20" Margin="0,48,0,0">
            <TextBlock Text="Press this button to show a progress indicator" Style="{StaticResource SubtitleTextBlockStyle}" />
            <Button Content="Start Long Operation" Click="Button_Click" Margin="0,12,0,0" />
        </StackPanel>
    </Grid>
</Page>
